extends ../layout
//- 主页
block content

  -if(user.level == 0)
    link(rel='stylesheet', href='/css/normal.css')
    include user
    include ../public/changePasswdModal
    include ../public/alertInfoModal
    script(src="/js/homeByUser.js")

  -else if(user.level == 1)
    link(rel='stylesheet', href='/css/secretaryPage.css')  
    include secretary
    include ../public/changePasswdModal
    include ../public/alertInfoModal
    script(src="/js/homeBySecretary.js")

  -else
    link(rel='stylesheet', href='/css/adminPage.css')
    include admin
    include ../public/alertInfoModal
    script(src="/js/homeByAdmin.js")

  script(src="/js/publicAPI.js")

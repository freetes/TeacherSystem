extends ../layout
//- 登录界面
block content
  link(rel="stylesheet", href="/css/normal.css")

  body
    include ../public/navi
    
    .container
      .row
        .col-xs-0.col-md-8
        .col-xs-12.col-md-4
          h3 登陆界面
          br
          form.form-horizontal(action='/signin', method='POST')
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-user(aria-hidden="true")
              input.form-control(type='text', name='id', placeholder="教师工号")
            br
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-lock(aria-hidden="true")
              input.form-control(type='password', name='password', placeholder="密码")
            br
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-asterisk(aria-hidden="true")  #{verifyCodeExpression} 结果为
              input.form-control(type='text', name='verifyCode', placeholder="验证码")

            .col-md-12.col-xs-12.text-right(style="color:red")= message
            
            br
            .form-group
              .col-md-12.col-xs-12
                button.btn.btn-primary.btn-block 提交
          

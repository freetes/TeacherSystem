extends ../layout
//- 登录界面
block content
  link(rel="stylesheet", href="/css/normal.css")

  body
    include ../public/navi
    
    .container(style="background-color: white")
      .row
        .col-xs-0.col-md-8
          img.img-responsive(src="/img/loginBg.jpg")
        .col-xs-12.col-md-4
          h3 用户登录
          br
          form.form-horizontal(action='/signin', method='POST')
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-user(aria-hidden="true")
              input.form-control(type='text', name='id', placeholder="教师工号")
            br
            .input-group
              .input-group-addon
                span.glyphicon.glyphicon-lock(aria-hidden="true")
              input.form-control(type='password', name='password', placeholder="密码")
            br
            .input-group.verifyPopoverHelp(data-toggle="popover", data-trigger="focus", data-placement="top", data-content="例如：(叁 加 柒) 结果为 10")
              .input-group-addon
                span.glyphicon.glyphicon-asterisk(aria-hidden="true")
              .input-group-addon
                span #{verifyCodeExpression} 结果为
              input.form-control(type='text', name='verifyCode', placeholder="验证码")

            .col-md-12.col-xs-12.text-right(style="color:red")= message
            
            br
            .form-group
              .col-md-12.col-xs-12
                button.btn.btn-primary.btn-block 登录
    
    script.
      $(".verifyPopoverHelp").mouseenter(function(){
        $(".verifyPopoverHelp").popover('show')
      })

      $(".verifyPopoverHelp").mouseleave(function(){
        $(".verifyPopoverHelp").popover('hide')
      })
